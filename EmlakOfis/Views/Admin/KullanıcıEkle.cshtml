
@{
    ViewData["Title"] = "KullanıcıEkle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model EmlakcıEkle

<h1>KullanıcıEkle</h1>

<form asp-action="KullanıcıEkle" asp-controller="Admin">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputEmail4">İsim</label>
            <input asp-for="Ad" class="form-control">
        </div>
        <div class="form-group col-md-6">
            <label for="inputAddress">Soy İsim</label>
            <input type="text" asp-for="Soyad" class="form-control">
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword4">Şifre</label>
        <input type="password" asp-for="Sifre" class="form-control">
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputCity">Telefon</label>
            <input type="text" asp-for="Telefon" class="form-control" placeholder="0555 555 55 55">
        </div>
        <div class="form-group col-md-6">
            <label for="inputCity">Kullanıcı Adı</label>
            <input type="text" class="form-control" asp-for="KullaniciAdi">
        </div>

    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>