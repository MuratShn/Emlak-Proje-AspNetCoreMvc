@model List<EvViewModel>

<blockquote class="blockquote text-center">
    <p class="mb-0"><mark>En yeni ilanlar</mark></p>
</blockquote>

@foreach (var item in Model)
{
    <div class="card mb-3">
        <div class="row no-gutters">
            <div class="col-md-3">
                <img src="~/img/1.jpg" class="card-img" alt="Alternate Text" />

            </div>
            <div class="col-md-9">
                <div class="card-body">

                    <h5 class="card-title">@item.Baslik  <span class="badge badge-info float-right mr-5">@item.EvDurum</span></h5>

                    <p class="card-text">
                        @item.Acıklama
                    </p>

                    <blockquote class="blockquote">
                        <small class="text-muted">
                            Oda Sayısı: @item.OdaSayi + @item.SalonSayi  &#160;&#160;&#160;&#160;&#160;
                            Kat: @item.Katsayi  &#160;&#160;&#160;&#160;&#160;
                            Bina Yaşı : @item.Yas  &#160;&#160;&#160;&#160;&#160;
                            Metre Kare : @item.Metrekare
                        </small>
                        <a class="badge badge-primary float-right mr-5 text-decoration-none" asp-action="Detay" asp-route-Id="@item.Id">İlana Git</a>
                        <p class="mb-0 font-weight-bold">Fiyat: @item.Fiyat ₺</p>
                    </blockquote>
                    <p class="card-text">
                        <small class="text-muted"> @item.Tarih</small> 
                    </p>


                </div>
            </div>
        </div>
    </div>

}